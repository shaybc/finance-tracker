{
  "name": "finance-tracker-local",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Local finance tracker - ingest Excel exports, store in SQLite, view in Hebrew RTL web UI",
  "scripts": {
    "dev": "concurrently -n server,client -c auto \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "node ./server/index.js",
    "dev:client": "npm --prefix ./client run dev",
    "build": "npm --prefix ./client run build",
    "start": "node ./server/index.js --serve-client",
    "ingest:once": "node ./server/cli/ingest-once.js",
    "db:migrate": "node ./server/db/migrate.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.3.0",
    "chokidar": "^3.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "luxon": "^3.5.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "react-hot-toast": "^2.6.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.4"
  }
}
